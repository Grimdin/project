extends layout
block append content
   .row
      .col-sm-3
         #lang
            h4 Выбрать язык
            select.form-control
               option(value="") assembly_x86
               option(value="") coffee
               option(value="") c_cpp
               option(value="") csharp
               option(value="") css
               option(value="") haskell
               option(value="") html
               option(value="") java
               option(value="" selected=true) javascript
               option(value="") json
               option(value="") lisp
               option(value="") mysql
               option(value="") ruby
               option(value="") pascal
               option(value="") php
               option(value="") python
               option(value="") perl
               option(value="") plain_text
               option(value="") powershell
         div(id="members", style="height: 150px;")
