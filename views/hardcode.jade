extends layout
block append content
   style(type="text/css", media="screen").
      #editor {
         position: relative;
         min-height: 400px;
         padding-right: 15px;
         padding-left: 15px;
         background: white;
      }
   .row
      .col-sm-3
         #lang
            h4 Select language
            select.form-control
               option html
               option css
         div(id="members", style="height: 150px;")
            h4 Members
            h4(id="list", style="height: 125px; overflow:hidden; overflow-y:auto; overflow-x:auto;")

         #chat
            h4 Chat here
            form
               input(disabled='false', class='form-control', autocomplete='off', autofocus='true', placeholder='Message...')
            ul(class="list-unstyled", style="height:200px; overflow:hidden; overflow-y:auto;")
      #editor.col-sm-9

block append script
   script(src='/vendor/bower_components/socket.io-client/socket.io.js', type='text/javascript')
   script(src='/vendor/bower_components/jquery.cookie/jquery.cookie.js', type='text/javascript')
   script(src='/vendor/bower_components/ace-builds/src-min/ace.js', type="text/javascript")
   script(src='/js/chat.js', type='text/javascript')